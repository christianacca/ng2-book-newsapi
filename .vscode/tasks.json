{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "${cwd}/node_modules/.bin/tsc",
    "isShellCommand": true,
    "args": ["--project", "${cwd}/src"],
    "showOutput": "silent",
    "tasks": [
        {
            "taskName": "compile",
            "suppressTaskName": true,
            "isBuildCommand": true,
            "problemMatcher": "$tsc"
        }
    ]
}